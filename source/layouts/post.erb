<!DOCTYPE html>
<html>
  <%= partial 'head' %>
  <body>
    <%= partial 'aside' %>
    <section class="wrapper">
      <div class="wrapper-inner">
        <article class="post">
          <header>
            <p class="meta"><%= I18n.localize(current_article.date, format: '%e %B %Y') %></p>
            <h1 class="title"><%= link_to current_article.title, current_article %></a></h1>
          </header>

          <div class="content">
            <% if current_article.data.external_link %>
              <div class="external">
                <a href="<%= current_article.data.external_link %>"><%= current_article.data.external_link %> &rarr;</a>
              </div>
            <% end %>

            <%= current_article.body %>
          </div>

          <footer>
            <p class="twitter">
              <a class="twitter-share-button" data-align="left" data-lang="en" data-related="baimz" data-text="<%= current_article.title %>" data-url="http://www.baimingze.com<%= current_article.url %>" data-via="baimz" href="https://twitter.com/share">Tweet</a>
            </p>

            <!-- 多说评论框 start -->
            <div class="ds-thread" data-threadd-key="<%= I18n.localize(current_article.date, format: '%e %B %Y') %>" data-title="<%= current_article.title %>" data-url="http://www.baimingze.com<%= current_article.url %>"></div>
            <!-- 多说评论框 end -->
            <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
            <script type="text/javascript">
var duoshuoQuery = {short_name:"baimingze"};
(function() {
    var ds = document.createElement('script');
    ds.type = 'text/javascript';ds.async = true;
    ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
    ds.charset = 'UTF-8';
    (document.getElementsByTagName('head')[0] 
      || document.getElementsByTagName('body')[0]).appendChild(ds);
})();
            </script>
            <!-- 多说公共JS代码 end -->


          </footer>

          <div id="disqus_thread"></div>
        </article>
      </div>
    </section>
    <%= partial 'js' %>
  </body>
</html>

